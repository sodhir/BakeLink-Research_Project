<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@android:color/white"
    android:showDividers="middle">

    <!-- Bakery Name and Status -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="fill_horizontal">

        <!-- Bakery Name -->
        <TextView
            android:id="@+id/bakery_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:text="The Cake Artisan"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="16sp" />

        <!-- Status -->
        <TextView
            android:id="@+id/quote_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accepted"
            android:textColor="@android:color/white"
            android:paddingHorizontal="16dp"
            android:paddingVertical="4dp"
            android:textSize="12sp"
            android:background="#88A84F"/>
    </LinearLayout>

    <!-- Cake Details -->
    <TextView
        android:id="@+id/cake_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Cake: Tropical Lime Delight"
        android:textColor="#333"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/cake_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Price: $90"
        android:textColor="#333"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/cake_flavor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Flavor: Lime with Coconut Frosting, Passion Fruit Filling"
        android:textColor="#333"
        android:textSize="14sp" />


    <!-- View Quote Button -->
    <Button
        android:id="@+id/view_quote_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/rounded_button_background"
        android:text="View Quote Details"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:layout_marginTop="16dp"/>


</LinearLayout>